class Solution {
    public boolean isHappy(int n) {
        Set<Integer> usedIntegers = new HashSet<>();
        while(true){

            int sum = 0;

            while(n>0){

            int rem = n%10;
            sum+= rem * rem;
            n/= 10;
                    }

        if(sum == 1){
            return true;
        }

        n = sum;

        if(usedIntegers.contains(n))

            return false;
        usedIntegers.add(n);
        }
    }
}



