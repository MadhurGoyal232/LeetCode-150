class Solution {
    public int ways(int i , int dp[]){
        if(i == 2){
            return 2;
        }
        if(i==1){
            return 1;
        }
        if(i<1){
            return 0;
        }
        if(dp[i]!= -1){
            return dp[i];
        }
        return dp[i] = ways(i-1, dp) + ways(i-2, dp);
    }
    public int climbStairs(int n) {
       int dp[] = new int[n+1];
       Arrays.fill(dp, -1);
       return ways(n, dp);
   }
}







