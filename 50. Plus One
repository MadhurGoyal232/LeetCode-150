class Solution {
    public int[] plusOne(int[] digits) {
        for(int i=digits.length-1;i>=0;i--){
            if(digits[i] < 9){
                digits[i]++;
                return digits;
            }else{
              // that digit will become 0 and in next iteration the upper if will make that digit +1 and return it, if we have all nine then the lower will execute and returned.
                digits[i] = 0;
            }
            
        }
        int arr[] = new int[digits.length+1];
        arr[0] = 1;
        return arr;
    }
}
