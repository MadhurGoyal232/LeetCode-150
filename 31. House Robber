class Solution {
    public int maxi(int i, int[]nums , int[] dp){
        if(i<0){
            return 0;
        }

        if(dp[i]!= -1){
            return dp[i];
        }
        int rob = nums[i] + maxi(i-2, nums, dp);
        int leave = maxi(i-1,nums,dp);
        return dp[i] = Math.max(rob, leave);
    }
    public int rob(int[] nums) {
        int n = nums.length;
        int dp[] = new int[n+1];
        Arrays.fill(dp, -1);

        return maxi(n-1,nums, dp);
    }
}






