class Solution {
    ArrayList<Integer> list = new ArrayList<>();
    public void makeZero(int[][] matrix, ArrayList<Integer> list){
        while(!list.isEmpty()){
            int x = list.remove(0);

            for(int i=0;i<matrix[0].length;i++){
                matrix[x][i] = 0;
            }
            int y = list.remove(0);

            for(int j=0;j<matrix .length;j++){
                matrix[j][y] = 0;
            }

        }
    }
    public void setZeroes(int[][] matrix) {
        for(int i=0;i<matrix.length;i++){
            for(int j=0;j<matrix[0].length;j++){
                if(matrix[i][j] == 0){
                    list.add(i);
                    list.add(j);
                }
            }
        }
        makeZero(matrix, list);

        
    }
}







