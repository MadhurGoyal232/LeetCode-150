class Solution {
    public boolean isPalindrome(String s) {
        StringBuilder sb = new StringBuilder();

        for(int i=0;i<s.length();i++){
            char ch = s.charAt(i);
            if((ch >= 'a' && ch<= 'z') || (ch>= 'A' && ch<= 'Z') || (ch>= '0' && ch<= '9')){
                sb.append(ch);
            }
        }
        String r = sb.toString().toLowerCase();
        String ss = sb.reverse().toString().toLowerCase();
        
        if(ss.equals(r)){
            return true;
        }
        return false;
    }
}

class Solution {
    public boolean isPalindrome(String s) {

        s = s.trim();

        if(s.length() <=1){
            return true;
        }
        
        String ss = s.replaceAll("[^a-zA-Z0-9]" , "");
        ss = ss.toLowerCase();

        StringBuilder sb = new StringBuilder(ss);
        sb = sb.reverse();

        if(sb.toString().equals(ss)){
            return true;
        }else{
            return false;
        }

    }
}
