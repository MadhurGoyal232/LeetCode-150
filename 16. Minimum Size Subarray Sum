class Solution {
    public int minSubArrayLen(int target, int[] nums) {
        int left = 0;
        int right = 0;
        int sum = 0;
        int count = Integer.MAX_VALUE;
        while(left!= nums.length){
            if(sum<target){
                if(right == nums.length){
                    break;
                }
                sum+=  nums[right++];
            }
            
            if(sum>= target){
                while(sum>= target){
                    count = Math.min(count, right-left);
                    sum-= nums[left];
                    left++;
                }
            }
        }
        return count == Integer.MAX_VALUE? 0:count;
    }
}
