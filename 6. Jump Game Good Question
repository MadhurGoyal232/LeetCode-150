class Solution {
    public boolean canJump(int[] nums) {
        if(nums.length<=1){
            return true;
        }
        int max = 0;
        int ans = 0;
        for(int i=0;i<nums.length-1;i++){
            ans = i+ nums[i];
            max = Math.max(max,ans);
            if(nums[i] == 0 && max<= i){
                return false;
            }
            if(max>=nums.length-1){
                return true;
            }
        }
        return false;
    }
}
