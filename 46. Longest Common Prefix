class Solution {
    public String longestCommonPrefix(String[] strs) {
        StringBuilder sb = new StringBuilder();
        int r = 0;
        int s = 0;
        Arrays.sort(strs);
        String x = strs[0];
        String y = strs[strs.length - 1];

        while(r<x.length() && s< y.length()){
            if(x.charAt(r) == y.charAt(r)){
                sb.append(x.charAt(r));
            }else{
                break;
            }
            r++;
            s++;
        }
        return sb.toString();
    }
}

